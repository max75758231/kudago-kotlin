<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_8dp"
    android:layout_marginEnd="@dimen/margin_8dp"
    android:layout_marginBottom="@dimen/margin_16dp"
    app:cardCornerRadius="@dimen/margin_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_item_iv_height_160dp"
            android:background="@drawable/ic_image_placeholder"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textColor="@color/colorTvBlack"
            android:textSize="@dimen/text_size_16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="Музыкальный фестиваль LiveFest Summer" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:textColor="@color/colorTvBlack"
            tools:text="Первый фестиваль LiveFest на курорте «Роза Хутор» собрал перспективные музыкальные проекты России и произвёл фурор у публики. Летняя версия будет ещё жарче и динамичнее, охватит ещё больше жанров, откроет новые имена и порадует свежими треками от признанных звёзд."/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:paddingStart="@dimen/margin_4dp"
            tools:text="ЦПКиО им. Горького"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="@dimen/margin_16dp"
            style="@style/TextInfo"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:paddingStart="@dimen/margin_4dp"
            android:drawableStart="@drawable/ic_date"
            android:drawablePadding="@dimen/margin_12dp"
            tools:text="10-11 августа"
            style="@style/TextInfo"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:paddingStart="@dimen/margin_4dp"
            android:drawableStart="@drawable/ic_ruble"
            android:drawablePadding="@dimen/margin_18dp"
            tools:text="1 200 - 1 500 Р"
            style="@style/TextInfo"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
